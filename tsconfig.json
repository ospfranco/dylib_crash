{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["bun-types"],
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": ["./scripts/*.mts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
